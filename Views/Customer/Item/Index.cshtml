                @Html.DisplayFor(modelItem => item.ItemTwo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemThree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemFour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemFive)
